 <style>
     img {
         width: 75px;
         height: 75px;
     }
 </style>
 
 <a name="#"></a>

    <header class="p-5 header">
        <nav class="row">
            <div class="col-4">
                <ul class="nav">
                    <li class="nav-item">
                    <a class="nav-link a-customizations a-hover-customizations" href="/landing/{{ userid }}">Shop</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link a-customizations a-hover-customizations" href="/landing/{{ userid }}">About</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link a-customizations a-hover-customizations" href="/contact.html<!--Add storefront default contact page-->">Contact</a>
                    </li>
                </ul>
            </div>

            <div class="col-4">
                <ul class="nav justify-content-center">
                    <li class="nav-item">
                        <a class="nav-link pt-0 pb-0 storeFront a-customizations a-hover-customizations" href="/landing/{{ userid }}">Store Front</a>
                    </li>
                </ul>
            </div>

            <div class="col-4">
                <ul class="nav justify-content-end">
                    <li class="nav-item">
                    <a class="nav-link active a-customizations a-hover-customizations" href="/">Login</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link a-customizations a-hover-customizations" href="/cart/{{ userid }}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bag" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M8 1a2.5 2.5 0 0 0-2.5 2.5V4h5v-.5A2.5 2.5 0 0 0 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5zM2 5v9a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V5H2z"/>
                        </svg>
                    </a>
                    </li>
                </ul>
            </div>
        </nav>       
    </header>

    <div class="container">
        <h3>Shopping Cart</h3>
        
        <div class="row pl-3 pr-3 mb-1">
            <p class="col-1 m-0">Item</p>
            <p class="col-6 m-0"></p>
            <p class="col-3 m-0 text-right">Quantity</p>
            <p class="col-2 m-0 text-right">Price</p>

        </div>
        
        <hr class="m-0">
            {{#each cart}}
                {{>product/cart-block}}
            {{/each}}
        <div class="row align-items-center p-3">
            <div class="col-12">
                <h5 class="text-right">Subtotal: ${{ subtotal }}</h5>
            </div>
        </div>

        <div class="row align-items-center p-3">
            <div class="col-12 text-right p-0">
                <button type="button" class="btn button-color">Checkout</button>
            </div>
        </div>

    </div>

    <footer class="page-footer footer-fixed footer-color font-small p-5">
        <div class="container-fluid text-center text-md-left">
            <div class="row">
                <div class="col-3"></div>
                <div class="col-3">
                    <div class="mt-md-0 mt-3">
                        <h5 class="text-uppercase">Store Front</h5>
                        <p>123 Fictional Address</p>
                    </div>
                </div>
                <div class="col-3">
                    <div class="mb-md-0 text-right">
                        <ul class="list-unstyled">
                            <li>
                                <a href="#" class="a-customizations a-hover-customizations">Back to Top</a>
                            </li>
                            <li>
                                <a href="/contact.html" class="a-customizations a-hover-customizations">Contact</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-3"></div>
            </div>
        </div>
    </footer>