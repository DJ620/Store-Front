<style>
    body {
        font-family: {{ font }};
        color: {{ body_color }};
    }

    .nav, .nav-item, .nav-link, #tagline {
        color: {{ font_color }};
    }

    .button, footer, .custom-color {
        background-color: {{ accent_color }};
        color: {{ footer_color }};
    }

    .background {
        background-image: url({{ background_image }});
        background-attachment: {{ bg_scroll }};
        color: {{ body_color }};
    }

    .about {
        background-image: url({{ about_image }});
        background-attachment: {{ about_scroll }};
        color: {{ body_color }};
    }
</style>

<a name="#"></a>

    <header class="p-5 header position-absolute">
        <nav class="row">
            <div class="col-4">
                <ul class="nav">
                    <li class="nav-item">
                    <a class="nav-link a-customizations a-hover-customizations" href="/landing/{{ userid }}">Shop</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link a-customizations a-hover-customizations" href="#about">About</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link a-customizations a-hover-customizations" href="/contact/{{ userid }}/{{ id }}">Contact</a>
                    </li>
                </ul>
            </div>

            <div class="col-4">
                <ul class="nav justify-content-center">
                    <li class="nav-item">
                        <a class="nav-link pt-0 pb-0 storeFront a-customizations a-hover-customizations" href="/store/{{ userid }}/{{ id }}">{{ store_name }}</a>
                    </li>
                </ul>
            </div>

            <div class="col-4">
                <ul class="nav justify-content-end">
                    {{#if isSeller}}
                    <li class="nav-item">
                        <a class="nav-link active a-customizations a-hover-customizations" href="/storeEditor/{{ userid }}">Settings</a>
                    </li>
                    {{/if}}
                    {{#unless isSeller}}
                    <li class="nav-item"></li>
                        <a class="nav-link active a-customizations a-hover-customizations" href="">Account</a>
                    </li>
                    {{/unless}}
                    <li class="nav-item">
                    <a class="nav-link a-customizations a-hover-customizations" href="/cart/{{ userid }}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bag" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M8 1a2.5 2.5 0 0 0-2.5 2.5V4h5v-.5A2.5 2.5 0 0 0 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5zM2 5v9a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V5H2z"/>
                        </svg>
                    </a>
                    </li>
                </ul>
            </div>
        </nav>       
    </header>

    <div class="background">
        <div class="m-0 text-center description">
            <p class="m-0" id="tagline">{{ tagline }}</p>
            <a href="/storeproducts/{{ userid }}/{{ id }}" class="button button-customizations">Browse Collection</a>
        </div>
        
    </div>

    <div class="container">
        <div class="row p-5">
            <h1 class="col-12 pt-5 pb-2 text-center">Popular Items</h1>
            <h6 class="col-12 pb-5 text-center">These items have been viewed the most from this store</h6>
            {{#if hasProducts}}
                {{#each products}}
                    {{> product/storefront-block}}
                {{/each}}
            {{/if}}
        </div>
    </div>

    <div class="about" id="about">
        <div class="container p-5"> 
            <h1 class="text-center mb-5 pb-5">About Us</h1>
            <p class="mt-5 pt-5"> 
                {{ about }}
            </p>
        </div>
    </div>
    

    <footer class="page-footer font-small p-5">
        <div class="container-fluid text-center text-md-left">
            <div class="row">
                <div class="col-3"></div>
                <div class="col-3">
                    <div class="mt-md-0">
                        <h5 class="text-uppercase">{{ store_name }}</h5>
                        <p>{{ address }}</p>
                    </div>
                </div>
                <div class="col-3">
                    <div class="mb-md-0 text-right">
                        <ul class="list-unstyled">
                            <li>
                                <a href="#" class="a-customizations a-hover-customizations custom-color">Back to Top</a>
                            </li>
                            <li>
                                <a href="/contact/{{ id }}" class="a-customizations a-hover-customizations custom-color">Contact</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-3"></div>
            </div>
        </div>
    </footer>